<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- nền xám viền ngoài -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#F2F6FF"
                android:endColor="#FFFFFF"/>
        </shape>
    </item>

    <!-- thẻ trắng bo góc bên trong -->
    <item
        android:left="16dp"
        android:top="24dp"
        android:right="16dp"
        android:bottom="24dp">
        <shape>
            <corners
                android:radius="26dp"/>
            <solid
                android:color="@color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/gray_200"/>
        </shape>
    </item>
</layer-list>

