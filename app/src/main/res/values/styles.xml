<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Nút Primary -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/blue_600</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="elevation">5dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Nút Outline -->
    <style name="Widget.App.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/gray_300</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- TextField Outlined (nền trắng) -->
    <style name="Widget.App.TextField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_300</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- TextField Filled (giống mock: nền xanh nhạt, bo góc) -->
    <style name="Widget.App.TextField.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">#F3F6FF</item>
        <item name="boxStrokeColor">@color/gray_300</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/gray_600</item>

        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RowItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/list_ripple</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RowTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#111827</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RowValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">#9CA3AF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F0F0F0</item>
    </style>

</resources>
