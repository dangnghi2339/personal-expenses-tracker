<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dayItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"  android:padding="2dp"
    android:background="@drawable/calendar_day_background"> <TextView
    android:id="@+id/dayNumberTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="12sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:text="12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/dayNumberTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/revenueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_gravity="start"
            tools:text="12.43 mill." />

        <TextView
            android:id="@+id/expenditureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="start"
            tools:text="83 k" />

    </LinearLayout>

    <View
        android:id="@+id/todayDot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/blue_circle_dot"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/dayNumberTextView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>