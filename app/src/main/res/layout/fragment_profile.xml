<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_page_gray">

    <!-- ===== Header (avatar + name + email) ===== -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_person"
            android:contentDescription="@null"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="16sp"
                tools:text="Xuan Thong"/>

            <TextView
                android:id="@+id/et_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                tools:text="thongnx22@uef.edu.vn"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ===== Card: 3 má»¥c ===== -->
    <LinearLayout
        android:id="@+id/cardSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp">

        <!-- Money -->
        <LinearLayout
            android:id="@+id/rowMoney"
            style="@style/RowItemStyle"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_money"/>

            <TextView
                android:layout_marginStart="12dp"
                android:text="@string/money"
                style="@style/RowTitleStyle"/>

            <TextView
                android:id="@+id/tvMoneyValue"
                android:text="D"
                style="@style/RowValueStyle"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back"/>
        </LinearLayout>

        <View style="@style/DividerStyle"/>

        <!-- Notification -->
        <LinearLayout
            android:id="@+id/rowNotification"
            style="@style/RowItemStyle">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_bell"/>

            <TextView
                android:layout_marginStart="12dp"
                android:text="@string/notification"
                style="@style/RowTitleStyle"/>

            <TextView
                android:id="@+id/tvNotifyValue"
                android:text="@string/turn_off"
                style="@style/RowValueStyle"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back"/>
        </LinearLayout>

        <View style="@style/DividerStyle"/>

        <!-- Language -->
        <LinearLayout
            android:id="@+id/rowLanguage"
            style="@style/RowItemStyle"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_language"/>

            <TextView
                android:layout_marginStart="12dp"
                android:text="@string/language"
                style="@style/RowTitleStyle"/>

            <TextView
                android:id="@+id/tvLangValue"
                android:text="@string/vietnamese"
                style="@style/RowValueStyle"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ===== Card: Category ===== -->
    <LinearLayout
        android:id="@+id/cardCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:id="@+id/btn_manage_categories"
            style="@style/RowItemStyle"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/category"/>

            <TextView
                android:layout_marginStart="12dp"
                android:text="@string/category"
                style="@style/RowTitleStyle"/>

            <TextView
                android:id="@+id/tvCategoryValue"
                android:text="General"
                style="@style/RowValueStyle"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ===== Card: Log out ===== -->
    <LinearLayout
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_card"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_logout"/>

        <TextView
            android:layout_marginStart="12dp"
            android:text="@string/logout"
            android:textColor="#EF4444"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:rotation="180"
            android:src="@drawable/ic_back"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
