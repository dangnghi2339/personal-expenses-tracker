<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".LocaleApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DACK1"
        tools:targetApi="31">

        <activity
            android:name=".ui.view.LogoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true">
        </activity>

        <activity android:name=".ui.view.AddTransactionActivity" />
        <activity android:name=".ui.view.EditTransactionActivity" />
        <activity android:name=".ui.view.CostalActivity" />
        <activity android:name=".ui.view.LoginActivity" />
        <activity android:name=".ui.view.RegisterActivity" />
        <activity
            android:name=".ui.view.CategoryDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.DACK1" />

        <activity android:name=".ui.view.LanguageActivity" />
        <activity android:name=".ui.view.NotificationActivity" />
        <activity android:name=".ui.view.MoneyActivity" />

    </application>

</manifest>