<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DACK1"
        tools:targetApi="31">

        <!--
          SỬA LỖI 1: Đặt LogoActivity làm màn hình khởi động (LAUNCHER).
          Nó sẽ kiểm tra session và quyết định đi đâu (MainActivity hay LoginActivity).
        -->
        <activity
            android:name=".ui.view.LogoActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          SỬA LỖI 2: Xóa LAUNCHER khỏi MainActivity.
          Nó sẽ được gọi từ LogoActivity hoặc LoginActivity.
        -->
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true">
            <!-- Đã xóa intent-filter LAUNCHER khỏi đây -->
        </activity>

        <!--
          SỬA LỖI 3: Khai báo các Activity còn lại.
          (Bao gồm cả CostalActivity đã gây ra lỗi crash)
        -->
        <activity android:name=".ui.view.AddTransactionActivity" />
        <activity android:name=".ui.view.EditTransactionActivity" />
        <activity android:name=".ui.view.CostalActivity" />
        <activity android:name=".ui.view.LoginActivity" />
        <activity android:name=".ui.view.RegisterActivity" />

    </application>

</manifest>
